<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.newchronopos.controller.ProductController"
      spacing="10" alignment="CENTER" style="-fx-padding: 10;">
    <Label text="Products" style="-fx-font-size: 16px;" />
    <TableView fx:id="table">
        <columns>
            <TableColumn fx:id="nameCol" text="Name" />
            <TableColumn fx:id="priceCol" text="Price" />
        </columns>
    </TableView>
</VBox>
